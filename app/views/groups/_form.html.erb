<div class="form-group">
  <%= image_tag group.banner.url, class: 'rounded mx-auto d-block' if group.banner? %>
  <%= f.label :banner, class: 'fs-6 mt-2' %>
  <%= f.file_field :banner, class: 'form-control mt-2', placeholder: 'Banner' %>
</div>
<div class="form-group">
  <%= f.text_field :name, class: 'form-control mt-3', placeholder: 'Name' %>
</div>
<div class="form-group">
  <%= f.text_area :description, class: 'form-control mt-3', placeholder: 'Description' %>
</div>
<div class="form-group mt-3">
  <%= label_tag :genre %>
  <%= f.select(:genre, Group.genres.keys.map { |key| [key.humanize, key] }, { include_blank: 'Please Select Genre' }, { class: 'form-control mt-3' }) %>
</div>
<div class="form-group d-flex">
  <%= f.submit class: 'btn btn-primary mt-3 mx-auto' %>
</div>