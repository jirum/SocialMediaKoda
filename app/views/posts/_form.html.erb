<div class="form-group">
  <%= image_tag post.image.url, class: 'rounded mx-auto d-block' if post.image? %>
  <%= f.label :image, class: 'fs-6 mt-2' %>
  <%= f.file_field :image, class: 'form-control mt-2', placeholder: 'Image' %>
</div>
<div class="form-group">
  <%= f.text_field :title, class: 'form-control mt-3', placeholder: 'Title' %>
</div>
<div class="form-group">
  <%= f.text_area :content, class: 'form-control mt-3', placeholder: 'Content' %>
</div>
<div class="form-group">
  <%= label_tag :genre %>
  <%= f.select(:genre, Post.genres.keys.map { |key| [key.humanize, key] }, { include_blank: 'Please Select Genre' }, { class: 'form-control mt-3' }) %>
</div>
<div class="form-group mt-3">
  <%= check_box_tag :display_location, '1', params[:display_location] == '1' || (post.country.present? && post.city.present?) %>
  <%= label_tag :display_location, 'Want to display the location of post?' %>
</div>
<div class="form-group d-flex">
  <%= f.submit class: 'btn btn-primary mt-3 mx-auto' %>
</div>